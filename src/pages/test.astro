---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Heading from '../components/Heading.astro';
import HeadingNoTheme from '../components/HeadingNoTheme.astro';
import HeadingTW from '../components/HeadingTW.astro';
---

<Layout title="Test">


  <div class="flex flex-wrap items-center justify-center gap-6 not-content">
    <Button theme='success' size='lg' isfilled isrounded>Button</Button>
    <Button theme='secondary'>Button</Button>
    <Button isfilled theme='dark' isrounded size='lg'>Button</Button>
    <Button isfilled theme='light' isrounded size='lg'>Button</Button>
    <Button isfilled theme='info' isrounded size='lg'>Button</Button>
    <Button isfilled theme='warning' isrounded size='lg'>Button</Button>
    <Button isfilled theme='danger' isrounded size='lg'>Button</Button>
    <Button isfilled theme='primary' isrounded size='lg'>Button</Button>
    
  </div>

  <hr />

  <Heading level={1} size='lg' theme='primary'>
    This is a large primary heading
  </Heading>

  <Heading level={2} size='md' theme='secondary'>
    This is a medium secondary heading
  </Heading>

  <Heading level={3} size='sm' theme='success'>
    This is a small success heading
  </Heading>

  <hr />

  <HeadingNoTheme level={1} classes='text-red-500'>
    This is a responsive heading 1
  </HeadingNoTheme>

  <HeadingNoTheme level={2}> This is a responsive heading 2 </HeadingNoTheme>

  <HeadingNoTheme level={3}> This is a responsive heading 3 </HeadingNoTheme>

  <hr />

  <HeadingTW level={1} classes='text-amber-400'> This is a responsive heading 1 </HeadingTW>

  <HeadingTW level={2}> This is a responsive heading 2 </HeadingTW>

  <HeadingTW level={3}> This is a responsive heading 3 </HeadingTW>
</Layout>

