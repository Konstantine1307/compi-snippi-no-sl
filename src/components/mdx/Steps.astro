---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<ol class={['mdx-steps', className].filter(Boolean).join(' ')}>
	<slot />
</ol>

<style>
	.mdx-steps {
		counter-reset: step;
		list-style: none;
		padding-left: 0;
		display: grid;
		gap: 0.75rem;
		margin: 1rem 0;
	}

	.mdx-steps :global(li) {
		counter-increment: step;
		position: relative;
		padding-left: 2.25rem;
	}

	.mdx-steps :global(li::before) {
		content: counter(step);
		position: absolute;
		left: 0;
		top: 0;
		width: 1.6rem;
		height: 1.6rem;
		border-radius: 999px;
		display: grid;
		place-items: center;
		font-size: 0.85rem;
		font-weight: 600;
		background: color-mix(in srgb, var(--sl-color-accent, #4f46e5) 18%, transparent);
		border: 1px solid color-mix(in srgb, var(--sl-color-accent, #4f46e5) 28%, transparent);
		color: var(--sl-color-accent, #4f46e5);
	}
</style>
