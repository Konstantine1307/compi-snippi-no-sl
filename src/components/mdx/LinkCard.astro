---
import Icon from './Icon.astro';

interface Props {
	title: string;
	href: string;
	description?: string;
	icon?: boolean | string;
}

const { title, href, description, icon } = Astro.props;
---

<a class="mdx-link-card" href={href}>
	<div class="mdx-link-card__header">
		{icon && (
			<span class="mdx-link-card__icon" aria-hidden="true">
				<Icon name={typeof icon === 'string' ? icon : undefined} size="1em" />
			</span>
		)}
		<span class="mdx-link-card__title" set:html={title} />
	</div>
	{description && <div class="mdx-link-card__desc" set:html={description} />}
	<div class="mdx-link-card__slot"><slot /></div>
</a>

<style>
	.mdx-link-card {
		display: flex;
		flex-direction: column;
		text-decoration: none;
		border: 1px solid var(--sl-color-hairline, rgba(148, 163, 184, 0.35));
		border-radius: 0.65rem;
		padding: 0.9rem;
		gap: 0.5rem;
		background: var(--sl-color-bg, #ffffff);
		box-shadow: var(--sl-shadow-sm, 0 1px 2px rgba(2, 6, 23, 0.08));
		color: inherit;
		transition: transform 0.12s ease, border-color 0.12s ease, background-color 0.12s ease;
	}

	.mdx-link-card:hover {
		border-color: var(--sl-color-hairline-shade, rgba(148, 163, 184, 0.55));
		transform: translateY(-1px);
	}

	.mdx-link-card__header {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.mdx-link-card__title {
		font-size: var(--sl-text-lg, 1.125rem);
		line-height: var(--sl-line-height-headings, 1.2);
	}

	.mdx-link-card__icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 1.25rem;
		height: 1.25rem;
		border-radius: 0.35rem;
		background: color-mix(in srgb, var(--sl-color-accent, #4f46e5) 30%, transparent);
		color: var(--sl-color-accent, #4f46e5);
	}

	.mdx-link-card__desc {
		color: var(--sl-color-text-secondary, rgba(148, 163, 184, 1));
		font-size: 0.95rem;
	}
</style>
