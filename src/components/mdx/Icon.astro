---
interface Props {
	name?: string;
	class?: string;
	size?: string | number;
	label?: string;
}

const { name, class: className, size = '1em', label } = Astro.props;

const iconName = typeof name === 'string' ? name : undefined;
---

<span
	class={['mdx-icon', className].filter(Boolean).join(' ')}
	style={`width:${size};height:${size};`}
	role={label ? 'img' : undefined}
	aria-label={label}
	aria-hidden={label ? undefined : 'true'}
	data-icon={iconName}
>
	{iconName === 'right-arrow' && (
		<svg
			width="100%"
			height="100%"
			viewBox="0 0 24 24"
			fill="none"
			stroke="currentColor"
			stroke-width="2"
			stroke-linecap="round"
			stroke-linejoin="round"
			aria-hidden="true"
		>
			<path d="M5 12h14" />
			<path d="m12 5 7 7-7 7" />
		</svg>
	)}
	{iconName === 'laptop' && (
