---
import Icon from './Icon.astro';

interface Props {
	title: string;
	icon?: boolean | string;
}

const { title, icon } = Astro.props;
---

<article class="mdx-card">
	<p class="mdx-card__title">
		{icon && (
			<span class="mdx-card__icon" aria-hidden="true">
				<Icon name={typeof icon === 'string' ? icon : undefined} size="1em" />
			</span>
		)}
		<span set:html={title} />
	</p>
	<div class="mdx-card__body"><slot /></div>
</article>

<style>
	.mdx-card {
		border: 1px solid var(--sl-color-hairline, rgba(148, 163, 184, 0.35));
		border-radius: 0.75rem;
		padding: 1.1rem;
		background: var(--sl-color-bg, #ffffff);
		box-shadow: var(--sl-shadow-sm, 0 1px 2px rgba(2, 6, 23, 0.08));
	}

	.mdx-card__title {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin: 0 0 0.75rem;
		font-weight: 700;
		font-size: var(--sl-text-lg, 1.125rem);
	}

	.mdx-card__icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 1.25rem;
		height: 1.25rem;
		border-radius: 0.35rem;
		background: color-mix(in srgb, var(--sl-color-accent, #4f46e5) 30%, transparent);
		color: var(--sl-color-accent, #4f46e5);
	}

	.mdx-card__body :global(p) {
		margin: 0;
	}

	.mdx-card__body {
		display: grid;
		gap: 0.75rem;
	}

	.mdx-card__body :global(.mdx-link-card) {
		padding: 0.85rem;
		border-radius: 0.65rem;
	}
</style>
