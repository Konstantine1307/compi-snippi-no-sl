---
interface Props {
	stagger?: boolean;
}

const { stagger = false } = Astro.props;
---

<div class:list={['mdx-card-grid', { stagger }]} data-stagger={stagger ? 'true' : undefined}>
	<slot />
</div>

<style>
	.mdx-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
		gap: clamp(1rem, calc(0.5rem + 2vw), 2rem);
		margin: 1rem 0;
	}

	.mdx-card-grid > :global(*) {
		margin-top: 0 !important;
	}

	@media (min-width: 50rem) {
		.mdx-card-grid.stagger {
			--stagger-height: 5rem;
			padding-bottom: var(--stagger-height);
		}

		.mdx-card-grid.stagger > :global(*):nth-child(2n) {
			transform: translateY(var(--stagger-height));
		}
	}
</style>
