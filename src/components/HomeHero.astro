---
import heroLogo from '../assets/my-logo.webp';

type HeroAction = {
	text: string;
	link: string;
	variant?: 'primary' | 'secondary' | string;
};

type HeroData = {
	title?: string;
	tagline?: string;
	actions?: HeroAction[];
};

const { hero } = Astro.props as { hero?: HeroData };

const title = hero?.title ?? '';
const tagline = hero?.tagline ?? '';
const action = hero?.actions?.[0];
---

<section class="hero">
	<div class="hero-text">
		{title && <h1 class="hero-title">{title}</h1>}
		{tagline && <p class="hero-tagline">{tagline}</p>}
		{action && (
			<div class="hero-actions">
				<a href={action.link} class="btn btn-primary">{action.text}</a>
			</div>
		)}
	</div>
	<div class="hero-image">
		<img src={heroLogo.src} alt="Compoguide logo" />
	</div>
</section>

<style>
	.hero {
		display: grid;
		grid-template-columns: 1.15fr 0.85fr;
		align-items: center;
		gap: 3.5rem;
		margin-bottom: 4rem;
	}

	.hero-title {
		font-size: 3.2rem;
		line-height: 1.05;
		font-weight: 900;
		margin: 0;
		letter-spacing: -0.02em;
	}

	.hero-tagline {
		margin-top: 1rem;
		font-size: 1.05rem;
		line-height: 1.65;
		color: rgba(71, 85, 105, 1);
		max-width: 42rem;
	}

	:global([data-theme='dark']) .hero-tagline {
		color: rgba(148, 163, 184, 1);
	}

	.hero-actions {
		margin-top: 1.5rem;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		padding: 0.75rem 1.15rem;
		border-radius: 999px;
		font-weight: 700;
		text-decoration: none;
		border: 1px solid transparent;
	}

	.btn-primary {
		background: rgb(99, 102, 241);
		color: white;
	}

	.btn-primary:hover {
		background: rgb(79, 70, 229);
	}

	.hero-image {
		display: flex;
		justify-content: center;
	}

	.hero-image img {
		width: min(360px, 100%);
		height: auto;
	}

	@media (max-width: 900px) {
		.hero {
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: left;
		}

		.hero-image {
			justify-content: flex-start;
		}

		.hero-title {
			font-size: 2.6rem;
		}
	}
</style>
