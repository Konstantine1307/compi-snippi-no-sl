---
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'a'>, 'title'> {
  title: string;
  description?: string;
  text?: string;
  topics?: string[];
}

const { title, description, topics, ...attributes } = Astro.props;

const topic = topics?.join(' - ');
---

<div class='sl-link-card'>
  <span class='sl-flex stack'>
    <a {...attributes}>
      <span class='title' set:html={title} />
    </a>
    {description && <span class='description' set:html={description} />}
    {topic && <span class='topic' set:html={topic} />}
    <slot />
  </span>
</div>

<style>
  .sl-link-card {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    padding: 1rem;
    box-shadow: var(--sl-shadow-sm);
    position: relative;
    margin-bottom: 1rem;
  }

  a {
    text-decoration: none;
    line-height: var(--sl-line-height-headings);
  }

  /* a11y fix for https://github.com/withastro/starlight/issues/487 */
  a::before {
    content: '';
    position: absolute;
    inset: 0;
  }

  .stack {
    flex-direction: column;
    gap: 0.5rem;
  }

  .title {
    color: var(--sl-color-white);
    font-weight: 600;
    font-size: var(--sl-text-lg);
  }

  .description,
  .topic {
    color: var(--sl-color-gray-3);
    line-height: 1.5;
  }

  .topic {
    font-size: var(--sl-text-sm);
    font-weight: 500;
    margin-top: auto;
    text-align: end;
  }

  /* Hover state */
  .sl-link-card:hover {
    background: var(--sl-color-gray-7, var(--sl-color-gray-6));
    border-color: var(--sl-color-gray-2);
  }
</style>
