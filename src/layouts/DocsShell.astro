---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
type SidebarItem = {
	label: string;
	href: string;
	active?: boolean;
};

type SidebarGroup = {
	label: string;
	open?: boolean;
	items: SidebarItem[];
};

type PrevNextItem = {
	label: string;
	href: string;
};

type TocItem = {
	depth: number;
	slug: string;
	text: string;
};

interface Props {
	title: string;
	description?: string;
	sidebar: SidebarGroup[];
	toc?: TocItem[];
	prev?: PrevNextItem;
	next?: PrevNextItem;
}

const { title, description, sidebar, toc, prev, next } = Astro.props;
---

<BaseLayout title={title} description={description}>
	<Header />
	<div class="docs-shell">
			<div class="sidebar-backdrop" data-sidebar-backdrop aria-hidden="true"></div>
			<aside class="sidebar" id="docs-sidebar" aria-label="Sidebar">
				<nav>
					{sidebar.map((group) => (
						<details class="sidebar-group" open={group.open}>
							<summary class="sidebar-title">
								<span>{group.label}</span>
								<span class="sidebar-chevron" aria-hidden="true"></span>
							</summary>
							<ul class="sidebar-list">
								{group.items.map((item) => (
									<li>
										<a class={item.active ? 'sidebar-link active' : 'sidebar-link'} href={item.href}>
											{item.label}
										</a>
									</li>
								))}
							</ul>
						</details>
					))}
				</nav>
			</aside>
			<main class="content" id="main">
				<article class="prose">
					<slot />
				</article>
				{(prev || next) && (
					<nav class="prev-next" aria-label="Page navigation">
						{prev ? (
							<a class="prev-next__card prev-next__card--prev" href={prev.href}>
								<span class="prev-next__kicker">
									<span class="prev-next__arrow" aria-hidden="true">←</span>
									<span>Previous</span>
								</span>
								<span class="prev-next__title">{prev.label}</span>
							</a>
						) : (
							<span class="prev-next__spacer" aria-hidden="true" />
						)}
						{next ? (
							<a class="prev-next__card prev-next__card--next" href={next.href}>
								<span class="prev-next__kicker">
									<span>Next</span>
									<span class="prev-next__arrow" aria-hidden="true">→</span>
								</span>
								<span class="prev-next__title">{next.label}</span>
							</a>
						) : (
							<span class="prev-next__spacer" aria-hidden="true" />
						)}
					</nav>
				)}
			</main>
			<aside class="toc" aria-label="On this page">
				{toc && toc.length > 0 && (
					<div class="toc-inner">
						<div class="toc-title">On this page</div>
						<ol class="toc-list">
							{toc
								.filter((h) => h.depth >= 2 && h.depth <= 3)
								.map((h) => (
									<li class={h.depth === 3 ? 'toc-item depth-3' : 'toc-item'}>
										<a class="toc-link" href={`#${h.slug}`}>{h.text}</a>
									</li>
								))}
						</ol>
					</div>
				)}
			</aside>
		</div>

</BaseLayout>

<script>
	const root = document.documentElement;
	const toggleBtn = document.querySelector('[data-sidebar-toggle]');
	const backdrop = document.querySelector('[data-sidebar-backdrop]');
	const sidebar = document.getElementById('docs-sidebar');
	let lastFocused: HTMLElement | null = null;

	const setExpandedTrue = () => {
		if (toggleBtn) toggleBtn.setAttribute('aria-expanded', 'true');
	};

	const setExpandedFalse = () => {
		if (toggleBtn) toggleBtn.setAttribute('aria-expanded', 'false');
	};

	const openSidebar = () => {
		lastFocused = document.activeElement instanceof HTMLElement ? document.activeElement : null;
		root.classList.add('sidebar-open');
		setExpandedTrue();
		if (sidebar) {
			const focusables = sidebar.querySelectorAll<HTMLElement>(
				'a[href], button:not([disabled]), textarea:not([disabled]), input:not([disabled]), select:not([disabled]), [tabindex]:not([tabindex="-1"])'
			);
			const first = focusables[0] ?? null;
			if (first) first.focus();
		}
	};

	const closeSidebar = () => {
		root.classList.remove('sidebar-open');
		setExpandedFalse();
		if (lastFocused) lastFocused.focus();
	};

	const toggleSidebar = () => {
		if (root.classList.contains('sidebar-open')) closeSidebar();
		else openSidebar();
	};

	if (toggleBtn) {
		toggleBtn.addEventListener('click', (e) => {
			e.preventDefault();
			toggleSidebar();
		});
	}

	if (backdrop) {
		backdrop.addEventListener('click', (e) => {
			e.preventDefault();
			closeSidebar();
		});
	}

	window.addEventListener('keydown', (e) => {
		if (e.key === 'Tab' && root.classList.contains('sidebar-open') && sidebar) {
			const focusables = sidebar.querySelectorAll<HTMLElement>(
				'a[href], button:not([disabled]), textarea:not([disabled]), input:not([disabled]), select:not([disabled]), [tabindex]:not([tabindex="-1"])'
			);
			if (!focusables.length) return;
			const first = focusables[0] ?? null;
			const last = focusables[focusables.length - 1] ?? null;
			const active = document.activeElement;
			if (!first || !last) return;
			if (e.shiftKey && active === first) {
				e.preventDefault();
				last.focus();
			} else if (!e.shiftKey && active === last) {
				e.preventDefault();
				first.focus();
			}
			return;
		}
		if (e.key === 'Escape') closeSidebar();
	});

	if (sidebar) {
		sidebar.addEventListener('click', (e) => {
			if (!window.matchMedia('(max-width: 768px)').matches) return;
			const target = e.target;
			if (!(target instanceof Element)) return;
			const link = target.closest('a');
			if (link) closeSidebar();
		});
	}

	window.addEventListener('resize', () => {
		if (window.matchMedia('(min-width: 769px)').matches) closeSidebar();
	});
</script>

<style>
	.docs-shell {
		display: grid;
		grid-template-columns: 280px minmax(0, 1fr) 240px;
		gap: 2rem;
		max-width: 1440px;
		margin: 0 auto;
		padding: 1.25rem;
	}

	.sidebar-toggle {
		display: none;
	}

	.sidebar-backdrop {
		display: none;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	:global(.sidebar-open) body {
		overflow: hidden;
	}

	.sidebar {
		position: sticky;
		top: 1rem;
		align-self: start;
		max-height: calc(100vh - 2rem);
		overflow: auto;
		padding-right: 0.75rem;
		border-right: 1px solid rgba(148, 163, 184, 0.35);
	}

	.sidebar-group {
		margin: 0 0 1.25rem;
		border: none;
	}

	.sidebar-title {
		list-style: none;
		display: flex;
		align-items: center;
		justify-content: space-between;
		font-size: 1rem;
		font-weight: 700;
		margin: 0;
		padding: 0.2rem 0;
		cursor: pointer;
		user-select: none;
	}

	.sidebar-title::-webkit-details-marker {
		display: none;
	}

	.sidebar-chevron {
		width: 0.65rem;
		height: 0.65rem;
		border-right: 2px solid rgba(148, 163, 184, 0.95);
		border-bottom: 2px solid rgba(148, 163, 184, 0.95);
		transform: rotate(45deg);
		transition: transform 0.15s ease;
		margin-left: 0.75rem;
		flex: 0 0 auto;
	}

	.sidebar-group[open] > .sidebar-title .sidebar-chevron {
		transform: rotate(225deg);
	}

	.sidebar-list {
		list-style: none;
		margin: 0;
		padding: 0.25rem 0 0;
		display: grid;
		font-size: 0.9rem;
	}

	.sidebar-link {
		display: block;
		padding: 0.4rem 0.75rem;
		margin-left: 0.2rem;
		border-radius: 0.4rem;
		text-decoration: none;
		color: inherit;
	}

	.sidebar-link:hover {
		background: rgba(99, 102, 241, 0.08);
	}

	.sidebar-link.active {
		background: rgba(99, 102, 241, 0.16);
		color: rgb(99, 102, 241);
		font-weight: 600;
	}

	.content {
		min-width: 0;
	}

	:global(.prose) {
		width: 100%;
		max-width: 820px;
		margin: 0;
		padding: 0;
	}

	.prev-next {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 1.25rem;
		margin-top: 2.25rem;
	}

	.prev-next__card {
		display: grid;
		gap: 0.25rem;
		padding: 1.25rem;
		border-radius: 0.9rem;
		border: 1px solid rgba(148, 163, 184, 0.35);
		background: rgba(255, 255, 255, 1);
		box-shadow: 0 1px 2px rgba(2, 6, 23, 0.08);
		text-decoration: none;
		color: inherit;
		min-height: 5.25rem;
	}

	.prev-next__card:hover {
		border-color: rgba(99, 102, 241, 0.45);
		box-shadow: 0 8px 24px rgba(2, 6, 23, 0.08);
	}

	:global([data-theme='dark']) .prev-next__card {
		background: rgba(2, 6, 23, 1);
	}

	.prev-next__kicker {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.95rem;
		color: rgba(71, 85, 105, 1);
	}

	:global([data-theme='dark']) .prev-next__kicker {
		color: rgba(148, 163, 184, 0.95);
	}

	.prev-next__title {
		font-size: 1.25rem;
		font-weight: 600;
		line-height: 1.1;
	}

	.prev-next__card--next {
		text-align: right;
		justify-items: end;
	}

	.prev-next__arrow {
		font-size: 1.1rem;
		line-height: 1;
	}

	.prev-next__spacer {
		display: block;
	}

	.toc {
		position: sticky;
		top: 1rem;
		align-self: start;
		max-height: calc(100vh - 2rem);
		overflow: auto;
		padding-left: 0.75rem;
		border-left: 1px solid rgba(148, 163, 184, 0.35);
	}

	.toc-inner {
		font-size: 0.92rem;
	}

	.toc-title {
		font-weight: 600;
		margin-bottom: 0.6rem;
	}

	.toc-list {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: 0.35rem;
	}

	.toc-item.depth-3 {
		padding-left: 0.75rem;
		opacity: 0.9;
	}

	.toc-link {
		text-decoration: none;
		color: rgba(148, 163, 184, 0.95);
	}

	.toc-link:hover {
		color: inherit;
	}

	@media (max-width: 1024px) {
		.docs-shell {
			grid-template-columns: 260px minmax(0, 1fr);
		}
		.toc {
			display: none;
		}
	}

	@media (max-width: 768px) {
		.docs-shell {
			grid-template-columns: 1fr;
		}
		.prev-next {
			grid-template-columns: 1fr;
		}
		.sidebar {
			position: fixed;
			inset: 0 auto 0 0;
			width: min(320px, 85vw);
			max-height: 100vh;
			padding: 1rem;
			border-right: 1px solid rgba(148, 163, 184, 0.35);
			background: rgba(255, 255, 255, 1);
			transform: translateX(-105%);
			transition: transform 0.2s ease;
			z-index: var(--z-overlay-panel);
		}

		:global([data-theme='dark']) .sidebar {
			background: rgba(2, 6, 23, 1);
		}

		:global(.sidebar-open) .sidebar {
			transform: translateX(0);
		}

		.sidebar-toggle {
			display: inline-flex;
		}

		.sidebar-backdrop {
			display: block;
			position: fixed;
			inset: 0;
			background: rgba(2, 6, 23, 0.35);
			opacity: 0;
			pointer-events: none;
			transition: opacity 0.2s ease;
			z-index: var(--z-overlay-backdrop);
		}

		:global(.sidebar-open) .sidebar-backdrop {
			opacity: 1;
			pointer-events: auto;
		}
		.toc {
			display: none;
		}
	}
</style>
